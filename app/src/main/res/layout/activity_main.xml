<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#93B4EC"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button_of_list_of_products"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_list_of_products"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_chose_product" />

    <ImageButton
        android:id="@+id/button_of_question"
        android:layout_width="49dp"
        android:layout_height="49dp"
        android:layout_margin="15dp"
        android:background="@drawable/info_sign"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_chose_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="супермаркети"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/button_of_list_of_products"/>

</androidx.constraintlayout.widget.ConstraintLayout>