<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="300dp"
    android:layout_gravity="center"
    android:layout_margin="5dp"
    android:background="@color/colorBlue"
    android:orientation="vertical"
    android:scaleType="centerCrop"
    app:cardCornerRadius="12dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBlue"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/mLL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toTopOf="@+id/mTVLinkLogos"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/mIVCloseDialogRes">

                    <ImageView
                        android:id="@+id/mIVLogoFreepik"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:srcCompat="@drawable/freepik_logo" />

                    <ImageView
                        android:id="@+id/mIVLogoIconFinder"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="20dp"
                        app:srcCompat="@drawable/iconfinder_logo" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/mIVCloseDialogRes"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="20dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/close_window_sign" />

                <TextView
                    android:id="@+id/mTVLinkLogos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:autoLink="web"
                    android:foregroundGravity="center"
                    android:gravity="center"
                    android:text="@string/mainactivity_site_links"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/mLL" />


                <TextView
                    android:id="@+id/mTVSupermarkets"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Інформацію про продукти було взято з наступних сайтів :"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/mTVLinkLogos"
                    android:foregroundGravity="center"
                    android:gravity="center"
                    android:layout_margin="15dp"/>

                <ImageView
                    android:id="@+id/mIVNovus"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_margin="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/mTVSupermarkets"
                    app:srcCompat="@drawable/novus_logo"
                    tools:layout_editor_absoluteY="383dp" />

                <TextView
                    android:id="@+id/mTVNovus"
                    android:layout_margin="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/mIVNovus"
                    android:text="https://novus.zakaz.ua/"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:autoLink="web" />

                <ImageView
                    android:id="@+id/mIVMegaMarket"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/mTVNovus"
                    android:layout_margin="20dp"
                    app:srcCompat="@drawable/megamarket_logo" />

                <TextView
                    android:id="@+id/mTVMegaMarket"
                    android:layout_margin="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/mIVMegaMarket"
                    android:text="https://megamarket.ua/"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:autoLink="web" />

                <ImageView
                    android:id="@+id/mIVFozzy"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/mTVMegaMarket"
                    android:layout_margin="15dp"
                    app:srcCompat="@drawable/fozzy_logo" />

                <TextView
                    android:id="@+id/mTVFozzy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/mIVFozzy"
                    android:text="https://fozzyshop.com.ua/"
                    android:textSize="20dp"
                    android:layout_margin="15dp"
                    android:textStyle="bold"
                    android:autoLink="web" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </ScrollView>

</androidx.cardview.widget.CardView>